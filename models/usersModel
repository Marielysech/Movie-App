const mongoose = require('mongoose');

const userSchema = new mongoose.Schema({
    username: {
        type: String,
        unique: true,
        required: true,
    },
    name:{
        type: String,
        required: true,
    },
    mail:{
        type: String,
        unique: true,
        required: true,
    },
    password:{
        type: String,
        required: true,
    },
    picture:{
        type: String,
    },
    favGenres: [{
        type: String,
    }],
    favMovies: [ {
        type: String,
        required: true,
    }]
})


module.exports = new mongoose.model("User", userSchema)